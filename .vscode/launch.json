            "type": "node",
            "request": "launch",
            "name": "WDIO TESTS",
            "skipFiles": [
                "<node_internals>/**",
                //"node_modules/**"
            ],
            "sourceMaps": true,
            "program": "${workspaceFolder}/node_modules/@wdio/cli/bin/wdio.js",
            "args": [
                "./wdio.conf.ts",
                "--spec='./test/specs/smoke.spec.ts'",
                // "--spec",
                // "./test/specs/smoke.spec.ts"
            ],
            "env": {
                "DEBUG": "1"
            }
        }
    ]
}

